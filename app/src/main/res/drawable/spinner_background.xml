<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default State -->
    <item android:state_enabled="true" android:state_pressed="false" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="#00796B" /> <!-- Set your desired color here -->
            <corners android:radius="50dp" />
        </shape>
    </item>
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#00574B" /> <!-- Darker shade for pressed state -->
            <corners android:radius="50dp"  />
        </shape>
    </item>
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="#009688" /> <!-- Another color for focus -->
            <corners android:radius="50dp"  />
        </shape>
    </item>
</selector>
